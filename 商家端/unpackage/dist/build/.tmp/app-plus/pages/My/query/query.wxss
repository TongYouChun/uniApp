.query-container .lookup .nav-bar {
      position: relative;
      z-index: 10;
      height: 104rpx;
      width: 600rpx;
      white-space: nowrap;
      box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}
.query-container .lookup .nav-bar .nav-item {
        display: inline-block;
        width: 150rpx;
        height: 104rpx;
        text-align: center;
        line-height: 104rpx;
        font-size: 30rpx;
        color: #8f8e93;
        position: relative;
}
.query-container .lookup .nav-bar .nav-item:after {
          content: '';
          width: 0;
          height: 0;
          border-bottom: 4rpx solid #007aff;
          position: absolute;
          left: 50%;
          bottom: 0;
          -webkit-transform: translateX(-50%);
                  transform: translateX(-50%);
          -webkit-transition: .3s;
          transition: .3s;
}
.query-container .lookup .nav-bar .current {
        color: #303133;
}
.query-container .lookup .nav-bar .current:after {
          width: 50%;
}
